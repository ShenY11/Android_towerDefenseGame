<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloDroidActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_my_deer_player"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.289"
            android:id="@+id/welcomMessage" android:textStyle="bold"
            android:textAllCaps="false" android:textColor="#E91E63" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="@string/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/transferToSecondButton"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/welcomMessage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" android:layout_marginStart="160dp" app:backgroundTint="#E91E63"
            android:textStyle="bold"
            android:onClick="transferButtonClicked"/>

</androidx.constraintlayout.widget.ConstraintLayout>